<Window x:Class="SpeechSynthesizerService.TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speech Synthesizer Service Test Client" 
        Height="350" 
        Width="525"
        MinHeight="300"
        MinWidth="400">

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12">
            <Button Name="btnClose" MinHeight="25" MinWidth="75" Padding="15,0,15,0" Click="btnClose_Click">Close</Button>
        </StackPanel>

        <StackPanel>
            <StackPanel>
                <TextBlock Margin="12,12,12,12" TextWrapping="Wrap">Press Start or Stop to interact with the Speech Synthesizer Service Workers.</TextBlock>
                <Button Margin="12,4,8,4" Name="btnStart" MinHeight="25" MinWidth="75" Padding="15,0,15,0" Click="btnStart_Click" IsDefault="True" IsEnabled="True" HorizontalAlignment="Left">Start Workers</Button>
                <Button Margin="12,4,8,4" Name="btnStop" MinHeight="25" MinWidth="75" Padding="15,0,15,0" Click="btnStop_Click" IsEnabled="False" HorizontalAlignment="Left">Stop Workers</Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
